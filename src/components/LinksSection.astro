---

import {LINKS} from "@lib/links.ts";
import ExtraLinks from "@components/ExtraLinks.astro";

---

<div class="flex flex-col md:flex-row items-center flex-wrap py-8 gap-[1.5rem] ">
    {LINKS.map(({title, links}) => (
        <div class="flex flex-col self-start w-48">
            <h1 class="font-semibold">{title}</h1>
            <div class="flex flex-col gap-1.5 text-wrap py-1"> 
                {links.map(({label, href}) => (
                <a href={href} class="text-xs hover:underline">
                    {label}
                </a>
            ))}
            </div>
        </div>
    ))}
    <ExtraLinks />
</div>