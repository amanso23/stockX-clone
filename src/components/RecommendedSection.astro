---

<SectionContainer title="Recommended For You" subtitle={subtitle}>
    <div class="flex flex-wrap gap-x-6 py-6">
        {RECOMMENDED_ARTICLES.map(({src, href, title, subtitle, price}) => (
            <a href={href} class="flex flex-col items-start gap-y-1 max-w-48">
                <div class="bg-white rounded-2xl p-4">
                    <img src={src} alt={title} class="w-40 h-20 object-cover" />
                </div>
                <div class="px-1">
                    <h1 class="text-sm">{title}</h1>
                    <h2 class="text-xs opacity-80">{subtitle}</h2>
                    <h3 class="text-xl font-bold">{price}</h3>
                </div>
                
            </a>
        ))}
    </div>
    
</SectionContainer>