---
import Rocket from '@icons/Rocket.astro'
import type { Article } from 'src/types'


interface Props {
    article: Article
}


const { article } = Astro.props

const {
    src,
    href,
    title,
    subtitle,
    price,
    badgeType
} = article

---

<div>
    <a href={href} class="flex flex-col items-start gap-y-1 max-w-48">
        <div class="bg-white rounded-2xl p-4">
            <img src={src} alt={title} class="w-40 h-20 object-cover" />
        </div>
        <div class="px-1">
            <h1 class="text-sm">{title}</h1>
            <h2 class="text-xs opacity-80">{subtitle}</h2>
            <h3 class="text-xl font-bold">{price}</h3>
        </div>
        <span class="px-[0.20rem] py-[0.20rem] rounded-md text-white text-xs flex items-center bg-secondary">
            {badgeType === "Xpress Ship" ? <Rocket class='size-5' /> : ""}
            {badgeType}
        </span>
    </a>


</div>


